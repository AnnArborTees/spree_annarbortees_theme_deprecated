<% cache [current_currency, @product] do %>
<div id="product_show_body">
    <main data-hook="product_show" itemscope itemtype="http://schema.org/Product">
      <% @body_id = 'product-details' %>

      <section id="product-images-and-form" class="row">
         <div class="skeleton">
             <div class="columns nine alpha" data-hook="product_left_part">

                <div class="row" data-hook="product_left_part_wrap">

                  <div id="product-images" data-hook="product_images">
                    <%= render partial: 'product_image_slider' %>
                  </div>

                </div>
              </div>

              <div class="columns six omega" data-hook="product_right_part">
                <div class="row" data-hook="product_right_part_wrap">
                    <div id="cart-form" class="column" data-hook="cart_form">
                      <%= render :partial => 'cart_form' %>
                    </div>
                </div>
              </div>
         </div>
       </section>

      <div class="skeleton">
          <section id="bottom-left" class="row">
            <div id="product-description" data-hook="product_description" class="column two-thirds">
                <%= render partial: 'product_information' %>
            </div>

            <div id="bottom-right" data-hook="bottom-right" class='column one-third'>
                <%= render partial: 'social_media' %>
            </div>

          </section>
       </div>
    </main>
</div>
<% end %>